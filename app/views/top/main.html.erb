<% if current_user %>
  <div class="search-bar">
    <%= form_with url: books_path, method: :get do |form| %>
      <%= form.text_field :query, placeholder: "書籍を検索", aria_label: "検索" %>
      <%= form.submit "検索" %>
    <% end %>
  </div>
  <div class="navigation-menu">
    <%= link_to '自分の本棚を見る', bookshelves_path %>
    <%= link_to '他のユーザーの本棚を見る', public_bookshelves_path %>
  </div>
<% else %>
  <div class="navigation-menu">
    <%= link_to '新規登録', new_user_path %>
    <%= link_to 'ログイン', login_path %>
  </div>
<% end %>