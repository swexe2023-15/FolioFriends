<h1>ログイン画面</h1>
<p>
    <%= form_with url: login_path, local: true do |f| %>
        <%= f.label :name, 'ユーザー名' %>
        <%= f.text_field :name %>
    
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password %>
        
        <%= f.submit 'ログイン' %>
        
        <br>
        
        <%= link_to '新規ユーザー追加', new_user_path %>
    
    <% end %>
</p>
