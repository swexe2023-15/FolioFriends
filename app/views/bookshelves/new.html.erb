<h1>本棚の作成</h1>
<p>
    <%= form_with model: @bookshelf, local: true do |f| %>
        <%= f.label :shelfname, '名前' %>
        <%= f.text_field :shelfname %>
        
        <%= f.submit '登録' %>
    <% end %>
    
    <% if @bookshelf.errors.any? %>
      <div id="error_explanation">
        <% @bookshelf.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    <% end %>

</p>
